.g-form-header

  .g-form-actions
      button.g-new-entry.btn.btn-sm.btn-success(title="Add new entry")
        i.icon-plus
      button.g-access-form.g-edit-access.btn.btn-sm.btn-warning(title="Access control")
        i.icon-lock

  .g-form-name.g-body-title= form.name()
  if form.get('description')
    .g-form-description!= renderMarkdown(form.get('description'))
  .g-clear-right

.g-form-entries-container
